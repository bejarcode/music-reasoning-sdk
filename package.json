{
  "name": "music-reasoning-sdk-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Offline-first music theory intelligence SDK with local AI",
  "keywords": [
    "music-theory",
    "sdk",
    "offline-first",
    "local-ai",
    "chord-detection",
    "harmony-analysis",
    "tonal"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/music-reasoning-sdk.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": "Music Reasoning SDK Team",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build && node scripts/generate-dts-maps.js",
    "build:packages": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:golden": "turbo run test:golden",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:cache": "rm -rf .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "validate:release": "bash scripts/validate-release.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.11.17",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "tsup": "^8.3.5",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^4.0.4"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "tonal": "^6.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
